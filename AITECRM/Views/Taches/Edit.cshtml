
@model AITECRM.Models.Tache

<link rel="stylesheet" href="~/Content/jquery-ui.css" />
<link rel="stylesheet" type="text/css" href="~/Content/jquery-ui.theme.css" />
<link rel="stylesheet" type="text/css" href="~/Content/jquery-ui.structure.css" />
<script src="~/Scripts/jquery-ui.js"></script>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Aite Crm Taches</title>
</head>
<body>
    <h4>
        <div class="container-fluid">
            <div class="row">
                <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
                    @Html.Partial("Menu")
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                    </ul>
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </h4>
    <center>
        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
            <h2>
                <br /><br /><br /><br />
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                <div class="btn-group" role="group" aria-label="Basic example">
                    <br /><br /><br />
                    <div class="btn-group" data-toggle="buttons"> </div>
                    <div class="container">
                            @using (Html.BeginForm())
                            {
                            @Html.AntiForgeryToken()
                            @Html.ActionLink("NOUVELLE TACHE", "Create")<br /><br />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div>
                                <div class="col-md-6 mb-3">
                                    <label for="Contact_">Contact</label>
                                    @Html.DropDownList("Contact_", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Contact_, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="Intitule">Intitule</label>
                                    @Html.EditorFor(model => model.Intitule, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Intitule, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                <div class="col-md-9 mb-3">
                                    <label for="Description">Description</label>
                                    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label for="Cout">Cout</label>
                                    @Html.EditorFor(model => model.Cout, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Cout, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                <div class="col-md-6 mb-3">
                                    <label for="Projet_">Projet</label>
                                    @Html.DropDownList("Projet_", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Projet_, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="Type_tache">Type de tache</label>
                                    @Html.EditorFor(model => model.Type_tache, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Type_tache, "", new { @class = "text-danger" })
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="Date_debut">Date de debut</label>
                                    @Html.EditorFor(model => model.Date_debut, new { htmlAttributes = new { @class = "form-control"} })
                                    @Html.ValidationMessageFor(model => model.Date_debut, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div>
                                <div class="col-md-6 mb-3">
                                    <label for="Date_fin">Date de fin</label>
                                    @Html.EditorFor(model => model.Date_fin, new { htmlAttributes = new { @class = "form-control"} })
                                    @Html.ValidationMessageFor(model => model.Date_fin, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Enregistrer</button>
                            }
                    </div>
                </h2>
            <center>
                <div>
                    <h2>
                        @Html.ActionLink("Liste des Taches", "Index")
                    </h2>
                </div>
                @Html.Partial("PagePrecedente")
            </center>

            <footer>
                <center><> <strong>Copyright © 2016 Tout droits réservés. Par <a href="http://www.aite-eonsulting.com">Aite Consulting</a>.</strong></center>
            </footer>
        </main>
    </center>

</body>
</html>

<script type="text/javascript">
    $(function() {
        $('#Date_debut').datepicker({
            dateFormat: 'mm/dd/yy'
        });
    });
 $(function() {
     $('#Date_fin').datepicker({
         dateFormat: 'mm/dd/yy'
     });
                });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
