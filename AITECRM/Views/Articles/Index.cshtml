@model IEnumerable<AITECRM.ViewModels.ProduitViewModel>
@using GridMvc.Html

<html>
<head>
    <script>
        $(document).ready(function () {
            $('.btn-delete-contacts').click(function (event) {
                var bouttonclick = $(event.target).closest('button');
                var Iddelete = $(bouttonclick).attr('data-id');
                $.ajax({
                    url: '@Url.Action("Newdelete")',
                    type: 'post',
                    data: { id: Iddelete },
                    success: function (data) {
                        if (data.Suppression == "Ok") {
                            $(bouttonclick).closest("tr").fadeOut(400, function () {
                                $(this).remove();
                            })
                        }
                    }
                })
            });
        });

    </script>
    <title>Aite Crm Produits</title>
</head>
<body>
    <h4>
        <div class="container-fluid">
            <div class="row">
                <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
                  @Html.Partial("Menu")
                </nav>
                <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main" id="Donnees">
                    <br /><br /><br /><br />
                    <h4>
                        Liste des Ventes de Produits &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<div class="btn-group" role="group" aria-label="Basic example">
                        </div>
                        @Html.ActionLink("NOUVEAU", "Create", "Articles", new { area = "" }, new { @class = "btn btn-outline-success" })

                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<div class="btn-group" role="group" aria-label="Basic example">
                        </div>

                    </h4>

                    @Html.Grid(Model).Columns(columns =>
               {
                   columns.Add(p => p.NomCategorie).Filterable(true).Sortable(true).Titled("Categorie");
                   columns.Add(p => p.NomProduit).Filterable(true).Sortable(true).Titled("Nom");
                   columns.Add(p => p.Prix).Filterable(true).Sortable(true);
                   columns.Add(p => p.Description).Filterable(true).Sortable(true);
                   columns.Add()
                           .Sanitized(false)
                           .Encoded(false)
                           .RenderValueAs(p => Html.ActionLink("Editer", "Edit", new { id = p.ProduitId }));

                   columns.Add()
                        .Sanitized(false)
                        .Encoded(false)
                        .RenderValueAs(p => Html.ActionLink("Details", "Details", new { id = p.ProduitId }));
                   columns.Add()
                             .Sanitized(false)
                             .Encoded(false)
                             .RenderValueAs(p => Html.ActionLink("Imprimer", "PrintDetails", new { id = p.ProduitId }));
                   if((Request.IsAuthenticated && User.IsInRole("Admin")) || (Request.IsAuthenticated && User.IsInRole("User_Pro")))
                    {
                       columns.Add()
                             .Sanitized(false)
                             .Encoded(false)
                             .RenderValueAs(p => "<button class='btn btn-default btn-delete-contacts' data-id = '" + p.ProduitId + "'> <span class ='glyphicon glyphicon-remove-circle'/> </button>");
                   }
               }
                              ).WithPaging(15)
                    @Html.Partial("PagePrecedente")
                    <footer>
                        <center><> <strong>Copyright © 2016 Tout droits réservés. Par <a href="http://www.aite-eonsulting.com">Aite Consulting</a>.</strong></center>
                    </footer>
                </main>

            </div>
        </div>
    </h4>
</body>
</html>


