@model AITECRM.Models.Entreprise
<html>
<head>
  
    <script>


    </script>
    <title>Aite Crm Campagne Marketing Emails</title>
    <link href="~/Content/chosen/chosen.min.css" rel="stylesheet" />
</head>
<body>
    <h4>
        <div class="container-fluid">
            <div class="row">
                <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
                    @Html.Partial("Menu")
                </nav>
                <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main" id="Donnees">
                    <br /><br /><br /><br />
                    <h4>
                        E-Mailing Entreprises &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<div class="btn-group" role="group" aria-label="Basic example">
                        </div><hr />
                        @Html.ActionLink("Campagne E-mailing Contacts", "CampagneContactsEmails", "Emails", new { area = "" }, new { @class = "btn btn-outline-success" })
                        @Html.ActionLink("Campagne E-mailing Entreprises", "CampagneEntreprisesEmails", "EmailEntreprises", new { area = "" }, new { @class = "btn btn-outline-success" })

                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<div class="btn-group" role="group" aria-label="Basic example">
                        </div>
                    </h4>

                    <div class="table-responsive">
                    </div>


                    <h4></h4>

                    <div id="container" style="width:90%; height:400px;">
                        <div class="card">
                            @using (Html.BeginForm("email", "EmailEntreprises"))
                            {

                                <div class="form-group">
                                    <label>Objet</label>
                                    <input name="objet" id="objet" />
                                </div>
                                <div class="form-group">
                                    <label>Message</label>
                                    <textarea name="message" id="message"></textarea>
                                </div>
                                <div class="card">
                                    <div class="card-header">
                                        <strong class="card-title">Selectionner les destinataires</strong>
                                    </div>
                                    <div class="card-body">
                                        <select name="email" id="email" multiple="true">
                                            @foreach (var personne in ViewBag.personnes)
                                            {
                                                <option value="@personne.Adresse_Email">@personne.Nom @personne.Adresse_Email</option>
                                            }

                                        </select>
                                    </div>
                                </div>
                                <div class="editor-field">
                                    <label>Piece jointe</label>
                                    <input type="file" name="file" multiple="multiple" />
                                </div>
                                <input type="submit" value="Valider" />

                            }

                        </div>
                        </div>
                    @Html.Partial("PagePrecedente")
                    <footer>
                        <center><> <strong>Copyright © 2016 Tout droits réservés. Par <a href="http://www.aite-eonsulting.com">Aite Consulting</a>.</strong></center>
                    </footer>
                </main>
               
            </div>
        </div>
    </h4>


    <script src="~/Scripts/chosen.jquery.min.js"></script>
    @section scripts{
        <script>
            $(function () {
                $("#email").chosen();
            }

                );
        </script>
    }
</body>
</html>






