@model AITECRM.Models.VenteArticle
<html>
<head>

    <link rel="stylesheet" href="~/Content/jquery-ui.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui.theme.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/jquery-ui.structure.css" />
    <script src="~/Scripts/jquery-ui.js"></script>


    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Aite Crm Ventes</title>
</head>
<body>
    <h4>
        <div class="container-fluid">
            <div class="row">
                <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
                    @Html.Partial("Menu")
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                    </ul>
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </h4>
    <center>
        <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">

            <h2>
                <br /><br /><br /><br />
                &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                <div class="btn-group" role="group" aria-label="Basic example">
                    <br /><br /><br />
                    <div class="btn-group" data-toggle="buttons"> </div>

                    <div class="container">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()
                            @Html.ActionLink("NOUVELLE VENTE", "Create")<br /><br />


                            <div>
                                <div class="form-group">
                                    <label for="Article_">Produit</label>
                                    @Html.DropDownList("Article_", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Article_, "", new { @class = "text-danger" })
                                </div>
                                <div>
                                    <div class="col-md-7 mb-3">
                                        <label for="DateAchat">Date de creation</label>
                                        <input type="text" class="form-control" id="DateAchat" name="DateAchat" value="@DateTime.Now" onfocus="if (this.value == '@DateTime.Now') { this.value = '' }" onblur="    if (this.value == '') { this.value = '@DateTime.Now' }">
                                    </div>
                                    <div class="col-md-5 mb-3">
                                        <label for="Contact_">Client</label>
                                        @Html.DropDownList("Contact_", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.Contact_, "", new { @class = "text-danger" })
                                    </div>

                                </div>

                                <center>  <button class="btn btn-primary" type="submit">Enregistrer</button></center>
                            </div>
                        }
                        </h4>
                    </div>

            </h2>
            <center>
                <div>
                    <h2>
                        @Html.ActionLink("Liste des Ventes", "Index")
                    </h2>
                </div>
                @Html.Partial("PagePrecedente")
            </center>
            <footer>
                <center><> <strong>Copyright © 2016 Tout droits réservés. Par <a href="http://www.aite-eonsulting.com">Aite Consulting</a>.</strong></center>
            </footer>
        </main>
    </center>

    <script type="text/javascript">
 $(function() {
     $('#DateAchat').datepicker({
         dateFormat: 'dd/mm/yy'
     });
  } );
    </script>

</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>
}
