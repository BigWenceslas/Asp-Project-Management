@model AITECRM.Models.Article

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Aite Crm Produits</title>
</head>
<h4>
    <body>

        <div class="container-fluid">
            <div class="row">
                <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
                   @Html.Partial("Menu")
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                    </ul>
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                        <li class="nav-item">
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <center>
            <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main">
                <h2>
                    <br /><br /><br /><br />

                    &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <br /><br /><br />
                        <div class="btn-group" data-toggle="buttons"> </div>
                    
                        <div class="container">

                           @using (Html.BeginForm())
                           {
                                  @Html.AntiForgeryToken()
                                @Html.ActionLink("NOUVEAU PRODUIT", "Create")<br /><br />
                                <div>
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.Idp)
                                    <div class="col-md-6 mb-3">
                                        <label for="Nom">Nom du produit</label>
                                        @Html.EditorFor(model => model.Nom, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Nom, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="CategorieProduit_">Categorie</label>
                                        @Html.DropDownList("CategorieProduit_", null, htmlAttributes: new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CategorieProduit_, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div>
                                    <div class="col-md-6 mb-3">
                                        <label for="Descriptionp">Description</label>
                                        @Html.EditorFor(model => model.Descriptionp, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Descriptionp, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label for="Prix">Prix</label>
                                        @Html.EditorFor(model => model.Prix, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Prix, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div hidden>
                                    <div class="col-md-6 mb-3">
                                        <label for="Date_Creation">Date de creation</label>
                                        <input type="text" class="form-control" id="Date_Creation" name="Date_Creation" value="@Model.Date_Creation" onfocus="if (this.value == '@Model.Date_Creation') { this.value = '' }" onblur="    if (this.value == '') { this.value = '@Model.Date_Creation' }"> 
                                    </div>
                                </div>
                                <button class="btn btn-primary" type="submit">Enregistrer</button>
                           }
                        </div>
                    
                    </div>
                </h2>
                <center>
                    <div>
                        <h2>
                            @Html.ActionLink("Liste des Produits", "Index")
                        </h2>
                    </div>
                </center>
                @Html.Partial("PagePrecedente")
                <footer>
                    <center><> <strong>Copyright © 2016 Tout droits réservés. Par <a href="http://www.aite-eonsulting.com">Aite Consulting</a>.</strong></center>
                </footer>
            </main>
        </center>
        <script src="~/Scripts/jquery-ui-1.10.4.custom.min.js"></script>
    </body>
</h4>
</html>


