@model AITECRM.ViewModels.AdresseMailViewModel
<script>

</script>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Email</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.DropDownListFor(m => m.AdressesContacts,
       Model.ListAdresses.Select(x => new SelectListItem {Text = x.NomContact,Value = x.AdressesContacts.ToString()}),
       new { @class = "form-control chosen-select", @multiple="true"})

        <div class="form-group">
           <label>Objet</label>
               <input name="Objet" id="Objet" placeholder="Entrer l'objet de l'email ici..." />
        </div>

        <div class="form-group">
           <label>Message</label>
           <input placeholder="Entrer votre addresse...", name="Message" id="Message" required/>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Enregistrer" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
