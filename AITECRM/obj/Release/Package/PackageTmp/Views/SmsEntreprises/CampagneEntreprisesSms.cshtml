                    </h4>

                    <div class="table-responsive">
                    </div>


                    <h4></h4>

                    <div id="container" style="width:90%; height:400px;">
                        <div class="card">
                            @using (Html.BeginForm("smsentreprise", "SmsEntreprises"))
                            {

                                <div class="form-group">
                                    <label>Message</label>
                                    <textarea type="text" name="message" id="message"></textarea>
                                </div>
                                <div class="card-header">
                                    <label>Selectionner les adresses</label>
                                </div>
                                <div class="card-body">
                                    <select name="telephone" id="telephone" multiple="true">
                                        @foreach (var personne in ViewBag.personnes)
                                        {
                                            <option value="@personne.Telephone">@personne.Nom @personne.Telephone</option>
                                        }
                                    </select>
                                </div>

                                <input type="submit" value="Valider" />

                            }
