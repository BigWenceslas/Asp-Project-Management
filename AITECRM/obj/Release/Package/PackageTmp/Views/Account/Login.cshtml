@model LoginViewModel
@using AITECRM.Models
@{Layout = null;}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>CONNEXION CRM</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" src="~/Content/connect/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link href="~/Content/connect/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/connect/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/connect/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/connect/vendor/animate/animate.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/connect/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/connect/vendor/animsition/css/animsition.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <script src="~/Content/connect/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <link href="~/Content/connect/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/connect/css/main.css" rel="stylesheet" />
    <link href="~/Content/connect/css/util.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body background="~/Views/Account/img.jpeg">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url('../../Content/connect/images/bg-01.jpg'); ">
                    <span class="login100-form-title-1">
                        CONNEXION  AITE CRM
                    </span>
                </div>

                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login100-form validate-form", role = "form" }))
            {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="wrap-input100 validate-input m-b-26">
                        <span class="label-input100">Nom d'utilisateur</span>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                    </div>
                    <div class="wrap-input100 validate-input m-b-26">
                        <span class="label-input100">Mot de passe</span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        <span class="focus-input100"></span>
                    </div>
                    <div class="flex-sb-m w-full p-b-30">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkbox100" id="RememberMe" type="checkbox" name="remember-me">
                            <label class="label-checkbox100" for="RememberMe">Se souvenir de moi</label>
                        </div>
                    </div>
                    <div class="container-login100-form-btn">
                            <input type="submit" value="Connexion" class="login100-form-btn" />
                    </div>
                 
                    
                }
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Content/connect/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/connect/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/connect/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/connect/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/connect/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/connect/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/connect/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/connect/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/connect/js/main.js"></script>
</body>
</html>



<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
           
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}