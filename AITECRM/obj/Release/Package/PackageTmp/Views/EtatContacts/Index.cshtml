@model IEnumerable<AITECRM.Models.EtatContact>
@using GridMvc.Html

<html>
<head>
    <script>
        $(document).ready(function () {
            $('.btn-delete-contacts').click(function (event) {
                var bouttonclick = $(event.target).closest('button');
                var Iddelete = $(bouttonclick).attr('data-id');
                alert(Iddelete);
                $.ajax({
                    url: '@Url.Action("Newdelete")',
                    type: 'post',
                    data: { id: Iddelete },
                    success: function (data) {
                        if (data.Suppression == "Ok") {
                            $(bouttonclick).closest("tr").fadeOut(400, function () {
                                $(this).remove();
                            })
                        }
                    }
                })
            });
        });

    </script>
    <title>Aite Crm Configurations</title>
</head>
<body>
    <h4>
        <div class="container-fluid">
            <div class="row">
                <nav class="col-sm-3 col-md-2 d-none d-sm-block bg-light sidebar">
                    @Html.Partial("Menu")
                </nav>
                <main class="col-sm-9 ml-sm-auto col-md-10 pt-3" role="main" id="Donnees">
                    <br /><br /><br /><br />
                    <h4>
                        Liste des Etats des Contacts &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<div class="btn-group" role="group" aria-label="Basic example">
                        </div>
                        @Html.ActionLink("Create", "Create", "EtatContacts", new { area = "" }, new { @class = "btn btn-outline-success" })
                        &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;<div class="btn-group" role="group" aria-label="Basic example">
                        </div>

                    </h4>

                    <h4>
                        @Html.Grid(Model).Columns(colums =>
{
    colums.Add(p => p.Contact.Contact_name).Titled("Nom du contact").Filterable(true).Sortable(true);
    colums.Add(p => p.Intitule).Filterable(true).Sortable(true);
    colums.Add(p => p.Description).Filterable(true).Sortable(true);
    colums.Add(p => p.DateVariation).Titled("Date").Filterable(true).Sortable(true);
    colums.Add()
           .Sanitized(false)
           .Encoded(false)
           .RenderValueAs(p => Html.ActionLink("Editer", "Edit", new { id = p.Id }));
    colums.Add()
           .Sanitized(false)
           .Encoded(false)
           .RenderValueAs(p => Html.ActionLink("Details", "Details", new { id = p.Id }));

    colums.Add()
          .Sanitized(false)
          .Encoded(false)
          .RenderValueAs(p => "<button class='btn btn-default btn-delete-contacts' data-id = '" + p.Id + "'> <span class ='glyphicon glyphicon-remove-circle'/> </button>");

})
                    </h4>
                    @Html.Partial("PagePrecedente")
                    <footer>
                        <center><> <strong>Copyright © 2016 Tout droits réservés. Par <a href="http://www.aite-eonsulting.com">Aite Consulting</a>.</strong></center>
                    </footer>
                </main>

            </div>
        </div>
    </h4>
</body>
</html>


